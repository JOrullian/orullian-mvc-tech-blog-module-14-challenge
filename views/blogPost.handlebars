<h1  id="post-title">{{post.title}}</h1>

<p>By {{post.user.username}} on {{format_date post.date_created}}</p>
<p id="post-content">{{post.content}}</p>

<!-- Update post form (hidden initially) -->
<form id="update-post-form" style="display: none;">
  <label for="update-title">Title:</label>
  <input type="text" id="update-title" value="{{post.title}}" required />

  <br>

  <label for="update-content">Content:</label>
  <textarea id="update-content" required>{{post.content}}</textarea>

  <button type="submit">Submit</button>
</form>

<hr>

<button id="delete-post" data-id="{{post.id}}" style="background-color: red; color: white;">Delete Post</button>
<button id="update-post" data-id="{{post.id}}">Update Post</button>

<hr>

<!-- Comments section -->
<div class="comments-section">
  {{#each post.comments}}
    <div class="comment">
      <p><strong>{{author.username}}</strong> - {{format_date date_created}}</p>
      <p id="comment-text">{{comment_text}}</p>
    </div>
  {{/each}}

  {{#if logged_in}}
    <!-- Comment form -->
    <form id="new-comment-form">
      <label for="comment-text">Comment:</label>
      <textarea id="comment-text" name="comment_text" required></textarea>
      <p>Post ID: {{post.id}}</p>
      <input type="hidden" id="blog_post_id" name="blog_post_id" value="{{post.id}}" />
      <button type="submit">Submit Comment</button>
    </form>
  {{/if}}
</div>

<script src="/js/comment.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/updatePost.js"></script>
